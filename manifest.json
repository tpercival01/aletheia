{
    "manifest_version": 3,
    "name": "Aletheia",
    "version": "1.0",
    "description": "Detect AI generated content",
    "action": {
      "default_icon": {
        "128": "src/icons/LOGO_128.png"
      },
      "default_popup": "src/ui/popup.html",
      "default_title": "Open Aletheia"
    },
    "icons": {
        "16": "src/icons/LOGO_16.png",
        "48": "src/icons/LOGO_48.png",
        "128": "src/icons/LOGO_128.png"
    },
    "permissions": ["activeTab", "scripting", "storage", "downloads", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "src/ui/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/ui/content.js"],
            "run_at": "document_start"
        }
    ],
    "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": ["models/**", "models/text/tfjs_model/model.json", "models/text/tfjs_model/*.bin", "models/tokenizer_js/tokenizer_json", "models/tokenizer_js/tokenizer_config.json"],
            "matches": ["<all_urls>"]
        }
    ]
  }